
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col"> Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
    <td>  <%= friend[:first_name] %></td>
    <td>  <%= friend[:last_name] %></td>
    <td>  <%= friend[:email] %></td>
    <td>  <%= friend[:phone_number] %></td>
    <td>  <%= link_to "Show", friend %></td>
    <td>  <%= link_to "Edit", edit_friend_path(friend) %></td>
    <td>  <%= button_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-secondary" %></td>
  
  </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Friend", new_friend_path, class:"btn btn-outline-secondary" %>
